<div class="section">
	<div class="container">
		<div class="columns is-centered">
			<div class="column is-half">
        <h3 class="h3">お問合せフォーム</h3>
        <%= form_with model: @contact, url: contact_path do |f| %>
        <div class="form-group">
          <%= f.label :お名前 %><br>
          <%= f.text_field :name, class: "form-control input" %><br>
        </div>
        <div class="form-group">
          <%= f.label :お問合せ内容 %><br>
          <%= f.text_area :message, rows: 10, class: "form-control input is-large" %><br>
          <%= f.submit '送信', class: "button is-info mb-4 mt-4" %><br>
          <%= link_to 'Back', root_path %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>