<p class="panel-heading">ツイートする</p>
<article class="media box">
  <div class="media-content">
  <%= simple_form_for(tweet) do |f| %>
    <div class="field">
      <div class="control">
        <%= f.input :tweet, label: "知識を提供する", input_html: { class: "textarea "}, wrapper: false, label_html: {class: "label"}, placeholder: "こんなことを学びました", autofocus: true %><br>
        <%= f.attachment_field :image %>
        <div class="flex mt-3">
          <div class="selectdiv">
            <%= f.collection_select :category_id, @categories, :id, :name, prompt: "カテゴリー選択 ▼", class: "select" %>
            <%= f.select :status, Tweet.statuses.keys.map { |k| [t("enums.tweet.status.#{k}"),k]}, class: "select pr-3" %>
          </div>
          <%= f.button :button, class: "btn btn-flat" do %><span>ツイート/下書きする</span><% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
</article>