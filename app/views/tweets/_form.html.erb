<%= simple_form_for(tweet) do |f| %>
  <%= f.error_notification %>
  <div class="field">
    <div class="control">
       <%= f.input :tweet, label: "知識を提供する", input_html: { class: "textarea "}, wrapper: false, label_html: {class: "label"}, placeholder: "こんなことを学びました", autofocus: true %><br>
       <%= f.attachment_field :image %>
       <%= f.collection_select :category_id, categories.all, :id, :name, prompt: "カテゴリー選択 ▼" %><br>
       <%= f.select :status, Tweet.statuses.keys.map { |k| [t("enums.tweet.status.#{k}"),k]} %>
    </div>
  </div>
  <%= f.button :submit, class: "button is-info" %>
<% end %>
