<% if tweet.favorited_by?(current_user) %>
  <%= link_to tweet_comment_comment_favorites_path(tweet, tweet), method: :delete, class: "text-decoration-none level-item", remote: true do %>
    <span class="icon"><i class="fas fa-thumbs-up"></i><%= tweet.comment_favorites.count %></span>
  <% end %>
<% else %>
  <%= link_to tweet_comment_comment_favorites_path(tweet, tweet), method: :post, class: "text-decoration-none level-item", remote: true do %>
    <span class="icon"><i class="far fa-thumbs-up"></i><%= tweet.comment_favorites.count %></span>
  <% end %>
<% end %>