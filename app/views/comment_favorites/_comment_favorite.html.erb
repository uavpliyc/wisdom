<% if comment.favorited_by?(current_user) %>
  <%= link_to tweet_comment_comment_favorites_path(tweet_id: tweet.id, comment_id: comment.id), method: :delete, class: "text-decoration-none level-item is-pulled-right is-size-4", remote: true do %>
    <span class="icon"><i class="fas fa-save"></i><%= comment.comment_favorites.count %></span>
  <% end %>
<% else %>
  <%= link_to tweet_comment_comment_favorites_path(tweet_id: tweet.id, comment_id: comment.id), method: :post, class: "text-decoration-none level-item is-pulled-right is-size-4", remote: true do %>
    <span class="icon"><i class="far fa-save"></i><%= comment.comment_favorites.count %></span>
  <% end %>
<% end %>